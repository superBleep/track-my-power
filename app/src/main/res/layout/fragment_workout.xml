<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/workout_background"
    android:paddingTop="30dp" >

    <LinearLayout
        android:id="@+id/workout_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="29sp"
        android:background="@drawable/workout_stats_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rjdhani_bold"
            android:textSize="30sp"
            tools:text="01 Jan, 2025" />

        <TextView
            android:id="@+id/day_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rjdhani_bold"
            android:textSize="24sp"
            tools:text="Year 1 - Month 1 - Week 1 - Day 1" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rjdhani_bold"
            android:textSize="24sp"
            tools:text="13:00 - 14:30 (1h30m)" />
    </LinearLayout>

    <View
        android:id="@+id/workout_bar"
        android:layout_width="0dp"
        android:layout_height="7dp"
        android:layout_below="@+id/workout_stats"
        android:layout_alignStart="@+id/workout_stats"
        android:layout_alignEnd="@id/workout_stats"
        android:background="@drawable/workout_separator"
        app:layout_constraintEnd_toEndOf="@+id/workout_stats"
        app:layout_constraintStart_toStartOf="@+id/workout_stats"
        app:layout_constraintTop_toBottomOf="@+id/workout_stats"
        android:layout_marginTop="@dimen/workout_items_spacing" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_exercises"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/workout_stats"
        app:layout_constraintEnd_toEndOf="@+id/workout_stats"
        app:layout_constraintTop_toBottomOf="@+id/workout_bar" />

    <ImageButton
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_marginBottom="53sp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/add_button"
        android:contentDescription="@string/add_exercise"
        android:src="@drawable/plus"
        app:tint="@color/color1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>