<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/workout_items_spacing">

    <LinearLayout
        android:id="@+id/exercise"
        android:background="@drawable/workout_stats_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Dumbbell Bench Press"
            android:layout_weight="1"
            android:fontFamily="@font/rjdhani_bold"
            android:textSize="15sp"
            android:textColor="@color/color4"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Chest"
            android:fontFamily="@font/rjdhani_bold"
            android:textSize="15sp"
            android:textColor="@color/color4"
            android:padding="6dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_worksets"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:background="@drawable/workout_worksets_background"
        app:layout_constraintTop_toBottomOf="@id/exercise"
        app:layout_constraintStart_toStartOf="@+id/exercise"
        app:layout_constraintEnd_toEndOf="@id/exercise"
        android:orientation="vertical"
        android:padding="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>